<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ComponentLibrary"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ComponentLibrary.Badge"
             x:DataType="local:Badge">
    <Border Background="Red" CornerRadius="10" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20"
            Height="20">
        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding BadgeNumber}" />
    </Border>
</UserControl>